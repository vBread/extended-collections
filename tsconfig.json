{
	"compilerOptions": {
		"lib": [
			"ES2020"
		],
		"target": "ES2019",
		"moduleResolution": "node",
		"module": "CommonJS",
		"outDir": "dist",
		"removeComments": false,
		"declaration": true,
		"declarationDir": "dist/typings",
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules",
		"src/*.test.ts"
	],
	"include": [
		"src/*"
	]
}